<%- await include('_partial/back') %>
<h1><%= title %></h1>
<form action="" method="POST">
  标题：<input name="name" required value="<%= audio.name %>"><br>
  情感：<input name="mood" required value="<%= audio.mood %>"><br>
  Tempo：<input name="tempo" required type="number" value="<%= audio.tempo %>"><br>
  乐器：<input name="instruments" value="<%= audio.instruments.join(', ') %>">（以逗号分隔）<br>
  标签：<input name="tags" value="<%= audio.tags.join(', ') %>">（以逗号分隔）<br>
  <button type="submit">保存</button>
</form>
